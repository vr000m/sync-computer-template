# ~/.zshrc - Zsh configuration for macOS
# Copy to ~/.zshrc and customize

# Path to oh-my-zsh installation (if using)
export ZSH="$HOME/.oh-my-zsh"

# Theme (ignored if using Starship)
ZSH_THEME="robbyrussell"

# Plugins
plugins=(
    git
    zsh-autosuggestions
    zsh-syntax-highlighting
)

# Load oh-my-zsh (if installed)
[ -f "$ZSH/oh-my-zsh.sh" ] && source "$ZSH/oh-my-zsh.sh"

# History settings
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# Homebrew
eval "$(/opt/homebrew/bin/brew shellenv)"

# Aliases
[ -f ~/.aliases ] && source ~/.aliases

# Local secrets (not tracked in git)
[ -f ~/.zshrc.local ] && source ~/.zshrc.local

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Add local bin to PATH
export PATH="$HOME/.local/bin:$PATH"

# Initialize Starship prompt (must be at end)
eval "$(starship init zsh)"
