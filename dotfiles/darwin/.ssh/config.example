# SSH Config Example for macOS
# Copy to ~/.ssh/config and customize

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

# Example: Remote server via Tailscale
# Host my-server
#     HostName my-server.tailnet-name.ts.net
#     User your-username
#     IdentityFile ~/.ssh/id_ed25519

# Example: Raspberry Pi
# Host raspberrypi
#     HostName raspberrypi.local
#     User pi
#     IdentityFile ~/.ssh/id_ed25519

# Keep connections alive
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
