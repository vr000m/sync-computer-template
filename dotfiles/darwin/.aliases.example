# Custom aliases for macOS
# Copy to ~/.aliases and customize
# Sourced from .zprofile

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# ls improvements
alias ll='ls -lah'
alias la='ls -A'
alias lt='ls -ltr'

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline -20'
alias gd='git diff'
alias gb='git branch'
alias gco='git checkout'

# Safety
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Quick edit config files
alias edzsh="vi ~/.zshrc"
alias edohmyzsh="vi ~/.oh-my-zsh"
alias edzprofile="vi ~/.zprofile"
alias edalias="vi ~/.aliases"

# Directory shortcuts (customize these)
alias cdcode="cd $HOME/Code/"
# alias docs='cd ~/Documents'

# Utilities
alias cathistory="cat -n ~/.zsh_history | sort -t ';' -uk2 | sort -nk1 | cut -f2-"
alias reload="source ~/.zprofile && source ~/.zshrc"
alias uvr="uv run"

# Quick edits (alternative style)
alias zshrc='${EDITOR:-nano} ~/.zshrc && source ~/.zshrc'
alias aliases='${EDITOR:-nano} ~/.aliases && source ~/.aliases'
