# ~/.bashrc: executed by bash(1) for non-login shells.

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# History settings
HISTCONTROL=ignoreboth
shopt -s histappend
# Guard against repeated prepends when re-sourcing bashrc
if [[ ! "$PROMPT_COMMAND" =~ "history -a" ]]; then
    PROMPT_COMMAND="history -a; history -n; ${PROMPT_COMMAND}"
fi

HISTSIZE=10000
HISTFILESIZE=20000
HISTTIMEFORMAT="%F %T  "
shopt -s histverify

# Shell options
shopt -s checkwinsize
shopt -s globstar
shopt -s cdspell
shopt -s dirspell

# Prompt (will be replaced by Starship if installed)
if [ -z "$STARSHIP_SHELL" ]; then
    PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
fi

# Enable color support
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Basic aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# Source aliases file
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Source local secrets (not tracked in git)
if [ -f ~/.bashrc.local ]; then
    . ~/.bashrc.local
fi

# Enable programmable completion
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Colored man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# fzf integration
if [ -f /usr/share/doc/fzf/examples/key-bindings.bash ]; then
    source /usr/share/doc/fzf/examples/key-bindings.bash
fi
if [ -f /usr/share/doc/fzf/examples/completion.bash ]; then
    source /usr/share/doc/fzf/examples/completion.bash
fi
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'

# Debian renames these tools
command -v batcat >/dev/null && alias bat='batcat'
command -v fdfind >/dev/null && alias fd='fdfind'

# Add local bin to PATH (for Starship, uv, etc.)
export PATH="$HOME/.local/bin:$PATH"

# NVM (Node Version Manager) - uncomment if using
# export NVM_DIR="$HOME/.nvm"
# [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
# [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# SSH keychain - update with your key name
# eval $(keychain --quiet --agents ssh id_ed25519)

# uv (Python package manager) - added by installer
. "$HOME/.local/bin/env"

# Initialize Starship prompt (must be at end)
eval "$(starship init bash)"
